# Maintainer: Miroslav Koskar (http://miroslavkoskar.com/)

pkgname='tcolors-git'
pkgver='r0'
pkgrel=2
pkgdesc='Get & Set terminal ANSI colors'
url='https://github.com/miroslavkoskar/tcolors'
arch=('any')
license=('BSD 2-Clause')
depends=('python')
makedepends=('git')

source=('git+https://github.com/miroslavkoskar/tcolors.git')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/tcolors"
    printf 'r%s.%s' "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd "$srcdir/tcolors"

    install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/tcolors/LICENSE

    install -dm755 "$pkgdir"/usr/bin

    install -m755 bin/tcolors.py "$pkgdir"/usr/bin/
    install -m755 bin/tcolors-gtk "$pkgdir"/usr/bin/
    install -m755 bin/tcolorsinfo "$pkgdir"/usr/bin/
    install -m755 bin/tcolorsinfo8 "$pkgdir"/usr/bin/

    ln -s tcolors.py "$pkgdir"/usr/bin/tcolors
}
